<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="SSDP Server IP:"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/ed_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="192.168.16.209"
            android:layout_weight="1"
            android:digits=".0123456789"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/btn_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR"
            />

        <Button
            android:id="@+id/btn_get_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_get_epg_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPG List"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_get_epg_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPG Now"
            android:enabled="false"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_ip"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>